doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title FarmConnect
    link(rel="stylesheet", href="/style.css")
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    )
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css")

  body(data-page="home")
    // Navbar
    ul.nav.justify-content-end
      li.nav-item
        a.nav-link(href="/about") AboutUs
      li.nav-item
        a.nav-link(href="/contact") ContactUs
      li.nav-item
        a.nav-link(href="/login") Login
      li.nav-item
        a.nav-link(href="/register") Register

    // Hero Section
    .hero-section
      .container
        h1.display-3.fw-bold Welcome to Farm-connect!
        p.lead A trusted place for fresh foods directly from local farmers across different parts of Uganda
        a.btn.btn-primary.btn-lg.mt-3(href="#learn-more") Learn More

    // Pre-Footer
    .pre-footer.py-4
      .container
        // Top Row
        .d-flex.justify-content-between.mb-3
          a.text-decoration-none(href="#") Terms
          a.text-decoration-none(href="#") Privacy Policy

        // Social Icons
        .d-flex.justify-content-center.mb-2
          a.mx-2(href="#")
            i.bi.bi-x
          a.mx-2(href="https://www.facebook.com/wandera.henry")
            i.bi.bi-facebook
          a.mx-2(href="#")
            i.bi.bi-youtube

    // Footer
    footer.text-center.fixed-footer
      .container
        p.mb-0 &copy; 2025 FarmConnect. All rights reserved.

    // Scripts
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
