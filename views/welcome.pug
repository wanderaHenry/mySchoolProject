doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Farm Connect - Welcome
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    link(rel="stylesheet", href="/style.css")

  body(data-page="welcome")
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.shadow-sm.px-4
      a.navbar-brand(href="#")
        i.bi.bi-list(style="font-size: 1.5rem;")
      .collapse.navbar-collapse
        ul.navbar-nav.ms-auto
          li.nav-item
            a.nav-link.active(href="/") Home
          li.nav-item
            a.nav-link(href="/about") About
          li.nav-item
            a.nav-link(href="/contact") Contact Us
          li.nav-item
            a.nav-link(href="/logout") Logout
  
        form.d-flex.ms-3
          input.form-control.form-control-sm.me-2(type="search", placeholder="Search")
          button.btn.btn-outline-secondary.btn-sm(type="submit")
            i.bi.bi-search
        img.rounded-circle.ms-3(src="https://via.placeholder.com/40", alt="Profile")

    // Welcome Text
    .container.text-center
      h3.welcome-text Welcome To Farm Connect, #{user.name}!

      // Buttons
      .mt-4
        button#dashboardBtn.btn.btn-custom(onclick="window.location.href='/dashboard'") Dashboard
        button#regionBtn.btn.btn-custom(onclick="window.location.href='/settings'") Change Region
        button#browseBtn.btn.btn-custom(onclick="window.location.href='/products/market'") Browse Products on Market



