doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Registration Page
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet", href="/style.css")

  body(data-page="register")
    // Navbar
    nav.navbar.navbar-expand-lg.bg-white.shadow-sm
      .container
        a.navbar-brand.fw-bold(href="/") Farm Connect
        .collapse.navbar-collapse.justify-content-end
          ul.navbar-nav
            li.nav-item
              a.nav-link(href="/") Home
            li.nav-item
              a.nav-link(href="/about") About
            li.nav-item
              a.nav-link(href="/contact") Contact
            li.nav-item
              a.nav-link(href="/login") Log In

    // Registration Card
    .register-card
      h4.text-center.mb-4.fw-bold Create your account

      form#registerForm(action="/register" method="POST")
        .mb-3
          select.form-select#regRegion(name="region" required)
            option(selected disabled value="") Select region
            option(value="Eastern") Eastern
            option(value="Central") Central
            option(value="Northern") Northern
            option(value="Western") Western

        .mb-3
          input.form-control#regName(type="text", name="name", placeholder="Full Name", required)

        .mb-3
          input.form-control#regEmail(type="email", name="email", placeholder="Email", required)

        .mb-3
          input.form-control#regPassword(type="password", name="password", placeholder="Password", required)

        .mb-3
          input.form-control#regConfirmPassword(type="password", name="confirmPassword", placeholder="Confirm Password", required)

        button.btn.btn-register.w-100(type="submit") Register

      p.text-center.mt-3
        | Already have an account? 
        a(href="/login") Log In

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
